<section class="auth">
  <div class="auth-card">
    <h1 class="auth-title">Reset Your Password</h1>

    <form action="<?= AUTH_PATHS['reset_password'] ?>" method="post" class="form">
      <?= CSRF_FIELD ?>
      <input type="hidden" name="token" value="<?= $token ?>">

      <div class="form-group">
        <input
          type="password"
          name="password"
          placeholder="New Password"
          autocomplete="new-password"
          class="form-input <?=has_error('password') ? 'is-error' : ''?>"
        >
        <?=show_error('password','<span class="form-error">##</span>')?>
      </div>

      <div class="form-group">
        <input
          type="password"
          name="confirm_password"
          placeholder="Confirm New Password"
          autocomplete="new-password"
          class="form-input <?=has_error('confirm_password') ? 'is-error' : ''?>"
        >
        <?=show_error('confirm_password','<span class="form-error">##</span>')?>
      </div>
      <button type="submit" class="app-button app-button--full">Reset Password</button>
    </form>
  </div>
</section>

<?php elseif ($status === 'success') : ?>

<section class="auth">
  <div class="auth-card text-center">
    <h1 class="auth-title">Password Changed!</h1>
    <p class="auth-subtitle">Your password has been changed successfully.</p>
    <a href="<?= AUTH_PATHS['login'] ?>" class="app-button app-button--full">Login</a>
  </div>
</section>

<?php elseif ($status === 'expired_token') : ?>

<section class="auth">
  <div class="auth-card text-center">
    <h1 class="auth-title">Reset Link Expired</h1>
    <p class="auth-subtitle">Please request a new password reset link.</p>
    <a href="<?= AUTH_PATHS['forgot_password'] ?>" class="app-button app-button--full">Forgot Password</a>
  </div>
</section>

<?php elseif ($status === 'invalid_token') : ?>

<section class="auth">
  <div class="auth-card text-center">
    <h1 class="auth-title">Invalid Reset Link</h1>
    <p class="auth-subtitle">Please request a new password reset link.</p>
    <a href="<?= AUTH_PATHS['forgot_password'] ?>" class="app-button app-button--full">Forgot Password</a>
  </div>
</section>

<?php else : ?>

<section class="auth">
  <div class="auth-card text-center">
    <h1 class="auth-title">Unknown Error</h1>
    <p class="auth-subtitle">Something went wrong. Please try again later.</p>
